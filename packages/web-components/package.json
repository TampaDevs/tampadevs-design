{
  "name": "@tampadevs/web-components",
  "version": "0.1.0",
  "description": "Tampa Devs Web Components - Framework-agnostic UI components",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "@tampadevs/tokens": "workspace:*",
    "@types/three": "^0.182.0",
    "jsdom": "^25.0.1",
    "three": "^0.182.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "lit": "^3.0.0",
    "three": "^0.170.0"
  },
  "peerDependenciesMeta": {
    "three": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
